<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical"
    android:background="@color/sketchColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/sketchColor"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp">


        <TextView
            android:id="@+id/edit_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/edit_dayofweek_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <EditText
                android:id="@+id/detail_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:hint="Write your Memo"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:paddingRight="50dp"
                android:paddingLeft="50dp" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/mind_layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/sketchColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mind_detail_edit_image"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/new_emotion" />




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"

        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">


        <ImageView
            android:id="@+id/mind_1"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            app:srcCompat="@drawable/new_emotion_2" />

        <ImageView
            android:id="@+id/mind_2"
            android:layout_marginRight="2dp"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            app:srcCompat="@drawable/new_emotion_3" />

        <ImageView
            android:layout_marginRight="2dp"

            android:id="@+id/mind_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            app:srcCompat="@drawable/new_emotion_4" />

        <ImageView
            android:id="@+id/mind_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            app:srcCompat="@drawable/new_emotion_5" />
    </LinearLayout>



</LinearLayout>