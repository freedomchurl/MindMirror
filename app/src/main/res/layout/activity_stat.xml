<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/colorTitle"
    android:layout_weight="2.2">

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:id="@+id/stat_back"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/back"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:text="감정 통계"
        android:textColor="@color/font_white"
        android:textSize="22dp"
        android:backgroundTint="@color/colorTitle"
        android:background="@color/colorTitle"
        android:gravity="center"
        android:fontFamily="@font/uto_gothic"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="17"
        android:background="@color/sketchColor">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eaeae9">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </Spinner>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/statRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>